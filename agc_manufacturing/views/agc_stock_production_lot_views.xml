<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">view.product.lot.form.inherited.costs</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="unit_cost" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="value_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="length"/>
                <field name="width"/>
            </xpath>
        </field>
    </record>

    <record id="search_product_lot_filter" model="ir.ui.view">
        <field name="name">search.product.lot.filter.inherited.size</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.search_product_lot_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="length" string="Product Length"/>
                <field name="width" string="Product Width"/>
            </xpath>
        </field>
    </record>

</odoo>