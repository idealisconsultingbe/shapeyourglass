<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form.inherited.button.finished.product</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                    <field name="configuration_is_done" invisible="1"/>
                    <field name="button_configure_visible" invisible="1"/>
                    <button string="FP Configuration" type="object" name="open_fp_configuration_view" class="btn-primary" attrs="{'invisible': [('button_configure_visible', '!=', True)]}"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="%(agc_manufacturing.add_fp_line_action)d"
                        string="Add a Finished Product"
                        type="action"
                        context="{'default_order_id': id, 'default_company_id': company_id}"
                        attrs="{'invisible': [('state', '!=', 'sale')]}"
                    />
                </xpath>
            </data>
        </field>
    </record>
    <record id="view_order_form_inherit_sale_stock" model="ir.ui.view">
        <field name="name">view.order.form.inherited.configuration.flag</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='route_id']" position="after">
                <field name="config_flag_readonly" invisible="1"/>
                <field name="no_config_needed" attrs="{'readonly': [('config_flag_readonly', '=', True)]}" groups="stock.group_adv_location"/>
            </xpath>
        </field>
    </record>
</odoo>