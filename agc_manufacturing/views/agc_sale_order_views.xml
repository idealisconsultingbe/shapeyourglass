<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form.inherited.button.finished.product</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                    <field name="configuration_is_done" invisible="1"/>
                    <field name="button_configure_visible" invisible="1"/>
                    <button string="FP Configuration" type="object" name="open_fp_configuration_view" class="btn-primary" attrs="{'invisible': [('button_configure_visible', '!=', True)]}"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="%(agc_manufacturing.add_fp_line_action)d"
                        string="Add a Finished Product"
                        type="action"
                        context="{'default_order_id': id, 'default_company_id': company_id}"
                        attrs="{'invisible': [('state', '!=', 'sale')]}"
                    />
                </xpath>
            </data>
        </field>
    </record>

    <record id="view_sales_order_filter" model="ir.ui.view">
        <field name="name">view.sales.order.filter.inherited.manufacturing.steps</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='order_line']" position="after">
                    <field name="order_line" string="Mothersheet Length" filter_domain="[('order_line.mothersheet_length', '=', self)]"/>
                    <field name="order_line" string="Mothersheet Width" filter_domain="[('order_line.mothersheet_width', '=', self)]"/>
                    <field name="order_line" string="Product Length" filter_domain="[('order_line.length', '=', self)]"/>
                    <field name="order_line" string="Product Width" filter_domain="[('order_line.width', '=', self)]"/>
                    <field name="order_line" string="Operations" filter_domain="[('order_line.route_ids', 'ilike', self)]"/>
                    <field name="order_line" string="Bill of Materials" filter_domain="[('order_line.bom_ids.code', 'ilike', self)]"/>
                </xpath>
            </data>
        </field>
    </record>

</odoo>