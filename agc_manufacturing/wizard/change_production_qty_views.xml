<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--  Change Product Quantity -->
        <record id="change_production_qty_view_form" model="ir.ui.view">
            <field name="name">change.production.qty.view.form</field>
            <field name="model">change.production.qty</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <form string="Change Product Qty">
                    <div role="alert" class="alert alert-warning">
                        <field name="warning_message"/>
                    </div>
                    <group col="4">
                        <field name="product_qty" string="Producing Quantity" readonly="1"/>
                        <field name="mo_id" invisible="1"/>
                        <field name="workorder_id" invisible="1"/>
                    </group>
                    <footer>
                        <button name="change_prod_qty_and_validate" string="Record Production"
                            colspan="1" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_workorder_change_production_qty" model="ir.actions.act_window">
            <field name="name">Validate Production</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">change.production.qty</field>
            <field name="view_mode">form</field>
            <field name="view_id" eval="change_production_qty_view_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>